@model BonTemps.Models.Coupon

@{
    ViewBag.Title = "Coupon Verwijderen";
	ViewBag.SelectedMenu = "Coupons";
}

<section class="content-header">
	<h1>Coupons <small>Verwijderen</small></h1>
</section>

<section class="content">
	<div class="box box-danger">
		<div class="box-header">
			<h2 class="box-title">Weet u het zeker?</h2>
		</div>
		<div class="box-body">
			<div class="row">
				<div class="col-md-4">
					<dl class="dl-horizontal">
						<dt>
							@Html.DisplayNameFor(model => model.Name)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Name)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.Code)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Code)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.Discount)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Discount)
						</dd>
					</dl>
				</div>
				<div class="col-md-4">
					<dl class="dl-horizontal">
						<dt>
							QR Code:
						</dt>
						<dd>
							<img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data=@Html.DisplayFor(model => model.Code)">
						</dd>
					</dl>
				</div>
			</div>
		</div>
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()
			<div class="box-footer">
				<input type="submit" value="Ja, Verwijder" class="btn btn-danger" />
				@Html.ActionLink("Nee, Aanpassen", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
				<a href="@Url.Action("Index")" class="btn btn-default pull-right"><i class="fa fa-arrow-left"> Terug</i></a>
			</div>
		}
	</div>
</section>