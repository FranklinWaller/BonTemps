<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>@ViewBag.Title | Bon Temps Dashboard</title>
	<meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
	@Styles.Render("~/Content/admin")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body class="skin-black">
	<!-- header logo: style can be found in header.less -->
	<header class="header">
		@Html.Partial("~/Areas/Admin/Views/Shared/_Header.cshtml")
	</header>
	<div class="wrapper row-offcanvas row-offcanvas-left">
		<!-- Left side column. contains the logo and sidebar -->
		<aside class="left-side sidebar-offcanvas">
			@Html.Partial("~/Areas/Admin/Views/Shared/_Sidebar.cshtml")
		</aside>
		<!-- Right side column. Contains the navbar and content of the page -->
		<aside class="right-side">
			@RenderBody()
		</aside><!-- /.right-side -->
	</div><!-- ./wrapper -->
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/admin")
    <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.4.5/jquery-ui-timepicker-addon.min.css"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.4.5/jquery-ui-timepicker-addon.min.js"></script>
    </script>
    <script src="~/Content/js/datepicker.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>