@model BonTemps.Models.Reservation


@{
    ViewBag.Title = "Resevering Informatie";
    ViewBag.SelectedMenu = "Reservations";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Reseveringen
        <small>Informatie</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Reservaties</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header">
            <h2 class="box-title">Reservatie Gegevens</h2>
        </div>
        <div class="box-body">
            <div class="row">
                <dl class="dl-horizontal col-md-5">
                    <dt>
                        @Html.DisplayNameFor(model => model.PersonCount)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PersonCount)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Comment)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Comment)
                    </dd>
                </dl>
                <dl class="dl-horizontal col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.ArrivalDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ArrivalDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EndDate)
                    </dd>
                </dl>
            </div>
			<div class="box-footer">
				<a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"> Terug</i></a>
				<div class="pull-right">
					@Html.ActionLink("Verwijderen", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
					@Html.ActionLink("Aanpassen", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
				</div>
			</div>
        </div>
    </div>
    <div class="box">
        <div class="box-header">
            <h2 class="box-title">Klant Gegevens</h2>
        </div>
        <div class="box-body">
			<div class="row">
				<dl class="dl-horizontal col-md-5">
					<dt>
						@Html.DisplayNameFor(model => model.Reserver.FullName)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Reserver.FullName)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Reserver.Email)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Reserver.Email)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Reserver.PhoneNumber)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Reserver.PhoneNumber)
					</dd>
				</dl>
				<dl class="dl-horizontal col-md-6">
					<dt>
						@Html.DisplayNameFor(model => model.Reserver.Adres)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Reserver.Adres)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Reserver.City)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Reserver.City)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Reserver.ZipCode)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Reserver.ZipCode)
					</dd>
				</dl>
			</div>
        </div>
    </div>
	<div class="box">
		<div class="box-header">
			<h2 class="box-title">Bestellingen</h2>
		</div>
		<div class="box-body">
			<table class="table table-responsive table-bordered">
				<thead>
				<tr>
					<th>
						Naam
					</th>
					<th>
						Hoeveelheid
					</th>
					<th>
						Status
					</th>
				</tr>
				</thead>

				@foreach (var item in Model.Orders)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Menu.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Amount)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Status)
						</td>
					</tr>
				}
			</table>
		</div>
		<div class="box-footer clearfix">
			@Html.ActionLink("Bestelling Toevoegen", "Create", controllerName: "ReservationOrders", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary pull-right" })
		</div>
	</div>
</section>