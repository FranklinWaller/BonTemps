@model BonTemps.Models.Reservation

@{
	ViewBag.Title = "Reservatie Verwijderen";
}
<section class="content-header">
	<h1>
		Reservaties
		<small>Verwijderen</small>
	</h1>
	<ol class="breadcrumb">
		<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
		<li class="active">Reservaties</li>
	</ol>
</section>

<section class="content">
	<div class="box box-danger">
		<div class="box-body">
			<h3>Are you sure you want to delete this?</h3>
			<div>
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayNameFor(model => model.PersonCount)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.PersonCount)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.ArrivalDate)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.ArrivalDate)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.EndDate)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.EndDate)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Comment)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Comment)
					</dd>

				</dl>
			</div>
		</div>
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()
			<div class="box-footer">

				<input type="submit" value="Ja, Verwijder" class="btn btn-danger" />
				@Html.ActionLink("Nee, Aanpassen", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
				<a href="@Url.Action("Index")" class="btn btn-default pull-right"><i class="fa fa-arrow-left"> Terug</i></a>
			</div>
		}
	</div>
</section>